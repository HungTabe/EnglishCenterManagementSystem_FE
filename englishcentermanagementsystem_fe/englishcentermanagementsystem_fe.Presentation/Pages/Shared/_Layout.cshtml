<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - English Center Management System</title>
    <meta name="description" content="Powerful web application for managing English centers. Built with ASP.NET Core Razor Pages for administrators, teachers, and students.">

    <!-- Bootstrap 5 CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome (CDN) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body style="margin-bottom: 0px;">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
        <div class="container">
            <a class="navbar-brand text-primary" href="/">
                <i class="fas fa-graduation-cap me-2"></i>
                English Center MS
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#benefits">Benefits</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#testimonials">Testimonials</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>
                    @if (Context.Session.GetString("Token") == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Register">Register</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <span class="nav-link disabled"><i class="fas fa-user me-1"></i>@Context.Session.GetString("FullName")</span>
                        </li>
                        @if (Context.Session.GetString("Role") == "0")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/UserManagement">Users Management</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/ClassManagement">Classes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/PaymentManagement">Payments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/TeacherSchedule">Schedules</a>
                            </li>
                        }
                        else if (Context.Session.GetString("Role") == "1")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/TeacherSchedule">Schedules</a>
                            </li>
                        }
                        else if (Context.Session.GetString("Role") == "2")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/ClassManagement">My Classes</a>
                            </li>
                           <li class="nav-item">
                            <a class="nav-link" asp-page="/CourseList">Courses</a>
                          </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-page="/Logout">Logout</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer id="contact" class="bg-dark text-light py-5" style="padding-bottom: 0px;"  >
        <div class="container">
            <div class="row">
                <div class="col-md-3 mb-4">
                    <h5 class="text-primary mb-3">
                        <i class="fas fa-graduation-cap me-2"></i>
                        English Center MS
                    </h5>
                    <p>Streamlining English center management with powerful ASP.NET Core technology.</p>
                    <div class="social-links">
                        <a href="#" class="text-light me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <h6 class="mb-3">Product</h6>
                    <ul class="list-unstyled">
                        <li><a href="#features" class="nav-link p-0 text-light">Features</a></li>
                        <li><a href="#benefits" class="nav-link p-0 text-light">Benefits</a></li>
                        <li><a href="#" class="nav-link p-0 text-light">Pricing</a></li>
                        <li><a href="#" class="nav-link p-0 text-light">Demo</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h6 class="mb-3">Company</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="nav-link p-0 text-light">About Us</a></li>
                        <li><a href="#" class="nav-link p-0 text-light">Contact</a></li>
                        <li><a href="#" class="nav-link p-0 text-light">Support</a></li>
                        <li><a href="#" class="nav-link p-0 text-light">Blog</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h6 class="mb-3">Legal</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="nav-link p-0 text-light">Privacy Policy</a></li>
                        <li><a href="#" class="nav-link p-0 text-light">Terms of Service</a></li>
                        <li><a href="#" class="nav-link p-0 text-light">Cookie Policy</a></li>
                        <li><a href="#" class="nav-link p-0 text-light">GDPR</a></li>
                    </ul>
                </div>  
            </div>
            <hr class="my-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">© @DateTime.Now.Year English Center Management System. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">Built with Group2-PRN232 <i class="fas fa-heart text-danger"></i> using ASP.NET Core</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>