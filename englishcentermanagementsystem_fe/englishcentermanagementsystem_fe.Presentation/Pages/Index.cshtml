@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section id="home" class="hero-section" style="margin-top: 70px;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Managing an English center has never been easier</h1>
                <p class="lead mb-4">A powerful platform for managing courses, schedules, tuition, and more. Built with ASP.NET Core Razor Pages for maximum performance and reliability.</p>
                <a asp-page="/FreeTrial" class="btn btn-light btn-lg me-3">
                    <i class="fas fa-rocket me-2"></i>Get Started Now
                </a>
                <a href="#features" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-play me-2"></i>Learn More
                </a>
            </div>
            <div class="col-lg-6">
                <img src="~/images/dashboard-placeholder.png" alt="English Center Management Dashboard" class="img-fluid hero-image">
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="section-padding">
    <div class="container">
        <div class="text-center mb-8">
            <h2 class="display-5 fw-bold text-primary mb-3">Powerful Features for Everyone</h2>
            <p class="lead text-muted">Designed to meet the needs of students, teachers, and administrators</p>
        </div>

        <!-- For Students -->
        <div class="row mb-5">
            <div class="col-12 mb-4 mt-5">
                <h3 class="text-center text-primary mb-4">
                    <i class="fas fa-user-graduate me-2"></i>For Students
                </h3>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 text-center p-4">
                    <i class="fas fa-calendar-plus feature-icon"></i>
                    <h5 class="card-title">Course Registration</h5>
                    <p class="card-text">Easy online registration for courses with real-time availability checking and instant confirmation.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 text-center p-4">
                    <i class="fas fa-clock feature-icon"></i>
                    <h5 class="card-title">Class Schedules</h5>
                    <p class="card-text">View personalized class schedules, receive updates, and never miss an important session.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 text-center p-4">
                    <i class="fas fa-chart-line feature-icon"></i>
                    <h5 class="card-title">Progress Tracking</h5>
                    <p class="card-text">Monitor attendance, track learning progress, and receive personalized notifications.</p>
                </div>
            </div>
        </div>

        <!-- For Teachers -->
        <div class="row mb-5">
            <div class="col-12 mb-4">
                <h3 class="text-center text-primary mb-4">
                    <i class="fas fa-chalkboard-teacher me-2"></i>For Teachers
                </h3>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 text-center p-4">
                    <i class="fas fa-calendar-check feature-icon"></i>
                    <h5 class="card-title">Schedule Management</h5>
                    <p class="card-text">Access your teaching schedule, classroom assignments, and student information in one place.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 text-center p-4">
                    <i class="fas fa-user-check feature-icon"></i>
                    <h5 class="card-title">Attendance Tracking</h5>
                    <p class="card-text">Quick and easy attendance marking with automated notifications to students and parents.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 text-center p-4">
                    <i class="fas fa-comments feature-icon"></i>
                    <h5 class="card-title">Communication Tools</h5>
                    <p class="card-text">Built-in messaging system to communicate with students, parents, and administration.</p>
                </div>
            </div>
        </div>

        <!-- For Administrators -->
        <div class="row">
            <div class="col-12 mb-4">
                <h3 class="text-center text-primary mb-4">
                    <i class="fas fa-users-cog me-2"></i>For Administrators
                </h3>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 text-center p-4">
                    <i class="fas fa-cogs feature-icon"></i>
                    <h5 class="card-title">Complete Management</h5>
                    <p class="card-text">Manage users, courses, classes, and resources from a centralized dashboard.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 text-center p-4">
                    <i class="fas fa-calculator feature-icon"></i>
                    <h5 class="card-title">Financial Management</h5>
                    <p class="card-text">Automated salary calculations, tuition tracking, and comprehensive financial reporting.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 text-center p-4">
                    <i class="fas fa-shield-alt feature-icon"></i>
                    <h5 class="card-title">Security & Reports</h5>
                    <p class="card-text">Role-based access control, detailed analytics, and comprehensive reporting tools.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Benefits Section -->
<section id="benefits" class="section-padding bg-light-custom">
    <div class="container">
        <div class="text-center mb-5" style="margin-top: 100px;">
            <h2 class="display-5 fw-bold text-primary mb-3">Why Choose Our System?</h2>
            <p class="lead text-muted">Built with ASP.NET Core Razor Pages for enterprise-grade performance</p>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100 text-center p-4">
                    <i class="fas fa-tachometer-alt feature-icon"></i>
                    <h5 class="card-title">Increased Efficiency</h5>
                    <p class="card-text">Streamline operations and reduce administrative overhead by up to 60%.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100 text-center p-4">
                    <i class="fas fa-mouse-pointer feature-icon"></i>
                    <h5 class="card-title">Ease of Use</h5>
                    <p class="card-text">Intuitive interface designed for users of all technical skill levels.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100 text-center p-4">
                    <i class="fas fa-lock feature-icon"></i>
                    <h5 class="card-title">Enterprise Security</h5>
                    <p class="card-text">Advanced security features with role-based permissions and data encryption.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100 text-center p-4">
                    <i class="fas fa-chart-bar feature-icon"></i>
                    <h5 class="card-title">Comprehensive Reporting</h5>
                    <p class="card-text">Detailed analytics and reports to help you make data-driven decisions.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section id="testimonials" class="section-padding" style="margin-bottom: 120px;">
    <div class="container">
        <div class="text-center mb-5" style="margin-top: 100px" >
            <h2 class="display-5 fw-bold text-primary mb-3">What Our Users Say</h2>
            <p class="lead text-muted">Trusted by English centers worldwide</p>
        </div>
        <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="testimonial-card card p-4">
                                <div class="row align-items-center">
                                    <div class="col-md-3 text-center">
                                        <img src="~/images/avatar-placeholder1.jpg" alt="Sarah Johnson" class="rounded-circle mb-3" width="80" height="80">
                                        <h6 class="mb-1">Sarah Johnson</h6>
                                        <small class="text-muted">Center Administrator</small>
                                    </div>
                                    <div class="col-md-9">
                                        <blockquote class="blockquote mb-0">
                                            <p>"This system has revolutionized how we manage our English center. The automated features save us hours every week, and the reporting tools give us insights we never had before."</p>
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="testimonial-card card p-4">
                                <div class="row align-items-center">
                                    <div class="col-md-3 text-center">
                                        <img src="~/images/avatar-placeholder2.jpeg" alt="Michael Chen" class="rounded-circle mb-3" width="80" height="80">
                                        <h6 class="mb-1">Michael Chen</h6>
                                        <small class="text-muted">English Teacher</small>
                                    </div>
                                    <div class="col-md-9">
                                        <blockquote class="blockquote mb-0">
                                            <p>"As a teacher, I love how easy it is to track attendance and communicate with students. The interface is clean and everything I need is just a click away."</p>
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="testimonial-card card p-4">
                                <div class="row align-items-center">
                                    <div class="col-md-3 text-center">
                                        <img src="~/images/avatar-placeholder3.jpg" alt="Emma Rodriguez" class="rounded-circle mb-3" width="80" height="80">
                                        <h6 class="mb-1">Emma Rodriguez</h6>
                                        <small class="text-muted">Student</small>
                                    </div>
                                    <div class="col-md-9">
                                        <blockquote class="blockquote mb-0">
                                            <p>"I can easily check my schedule, track my progress, and register for new courses. The notifications keep me updated on everything important."</p>
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section id="cta" class="section-padding bg-primary text-white">
    <div class="container">
        <div class="row justify-content-center" style="padding-bottom: 50px; padding-top: 50px;">
            <div class="col-lg-8 text-center my-5" >
                <h2 class="display-5 fw-bold mb-4">Ready to Transform Your English Center?</h2>
                <p class="lead mb-4">Join hundreds of English centers already using our system to streamline their operations.</p>

                <div class="alert alert-light d-inline-block mb-4">
                    <i class="fas fa-gift me-2"></i>
                    <strong>Try it Free for 30 Days</strong> - No credit card required
                </div>

                <form asp-page="/FreeTrial" class="row g-3 justify-content-center">
                    <div class="col-md-6">
                        <input type="email" name="Email" class="form-control form-control-lg" placeholder="Enter your email address" required>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-light btn-lg w-100">
                            <i class="fas fa-rocket me-2"></i>Get Started
                        </button>
                    </div>
                </form>

                <p class="mt-3 mb-0">
                    <small>Or <a href="#contact" class="text-white"><u>schedule a demo</u></a> to see it in action</small>
                </p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/site.js"></script>
}