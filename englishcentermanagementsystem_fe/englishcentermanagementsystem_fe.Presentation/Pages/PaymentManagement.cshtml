@page
@model PaymentManagementModel
@{
    ViewData["Title"] = "Payment Management";
}

<!-- Page Header -->
<section class="section-padding bg-primary text-white mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold mb-2">Payment & Tuition Management</h1>
                <p class="lead mb-0">Track tuition fees, payment history, and manage refunds with ease.</p>
            </div>
            <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                <button class="btn btn-light btn-lg d-none" id="btnAddPayment">
                    <i class="fas fa-plus me-2"></i>Add Payment
                </button>
            </div>
        </div>
    </div>
</section>

<!-- Alerts -->
<div class="container mt-3">
    <div id="alertPlaceholder"></div>
</div>

<!-- Payment Records Table -->
<section class="section-padding">
    <div class="container">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title mb-4 text-primary">Payment Records</h4>
                <div class="mb-3">
                    <label for="viewMode" class="form-label">View as:</label>
                    <select id="viewMode" class="form-select w-auto d-inline-block ms-2">
                        <option value="student">Student</option>
                        <option value="admin">Admin</option>
                    </select>
                    <input type="text" id="studentIdInput" class="form-control w-auto d-inline-block ms-2" placeholder="Student ID" style="display:none;" />
                    <button class="btn btn-primary ms-2 d-none" id="btnFetchStudent">Fetch</button>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle" id="paymentTable">
                        <thead class="table-light">
                            <tr>
                                <th>Payment ID</th>
                                <th>Student</th>
                                <th>Class</th>
                                <th>Course</th>
                                <th>Amount</th>
                                <th>Payment Date</th>
                                <th>Status</th>
                                <th>Refund</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Rows will be populated by JS -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Update Status Modal -->
<div class="modal fade" id="statusModal" tabindex="-1" aria-labelledby="statusModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="statusForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="statusModalLabel">Update Payment Status</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="statusPaymentId" name="paymentId" />
                    <div class="mb-3">
                        <label for="newStatus" class="form-label">New Status</label>
                        <select class="form-select" id="newStatus" name="newStatus">
                            <option value="Paid">Paid</option>
                            <option value="Pending">Pending</option>
                            <option value="Failed">Failed</option>
                            <option value="Refunded">Refunded</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Refund Modal -->
<div class="modal fade" id="refundModal" tabindex="-1" aria-labelledby="refundModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="refundForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="refundModalLabel">Process Refund</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="refundPaymentId" name="paymentId" />
                    <div class="mb-3">
                        <label for="refundAmount" class="form-label">Refund Amount</label>
                        <input type="number" class="form-control" id="refundAmount" name="amount" min="0" step="0.01" required />
                    </div>
                    <div class="mb-3">
                        <label for="refundNote" class="form-label">Note</label>
                        <textarea class="form-control" id="refundNote" name="note" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Process Refund</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Toast Container -->
<div aria-live="polite" aria-atomic="true" class="position-fixed top-0 end-0 p-3" style="z-index: 1080">
    <div id="toastContainer"></div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/js/payment-management.js"></script>
} 