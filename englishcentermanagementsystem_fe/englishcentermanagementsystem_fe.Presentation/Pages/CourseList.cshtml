@page
@model CourseListModel
@{
    ViewData["Title"] = "Courses";
}

<!-- Page Header -->
<section class="section-padding bg-primary text-white mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold mb-2">Courses</h1>
                <p class="lead mb-0">Browse all available courses and view details.</p>
            </div>
        </div>
    </div>
</section>

<!-- Alerts -->
<div class="container mt-3">
    <div id="alertPlaceholder"></div>
</div>

<!-- Course List -->
<section class="section-padding">
    <div class="container">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h4 class="card-title mb-3 text-primary">All Courses</h4>
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Course Name</th>
                                <th>Category</th>
                                <th>Description</th>
                                <th>Duration (hrs)</th>
                                <th>Fee</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="courseListTable">
                            <!-- Rows will be populated by JS -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/js/course-list.js"></script>
} 